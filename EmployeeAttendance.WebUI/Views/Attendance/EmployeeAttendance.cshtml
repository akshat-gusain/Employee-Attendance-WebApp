@using EmployeeAttendance.Application.DTOs
@model IEnumerable<EmpAttendanceDTO>

<h1>Employee Attendance Records</h1>

<table>
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Attendance Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.EmployeeId</td>
                <td>@record.AttendanceDate.ToShortDateString()</td>
                <td>@record.Status</td>
            </tr>
        }
    </tbody>
</table>

<style>
    table {
        width: 100%;
        border-collapse: collapse; 
    }

    th, td {
        padding: 10px 20px; 
        text-align: left;
    }

    th {
        background-color: #f2f2f2; 
    }

    td {
        border-bottom: 1px solid #ddd; 
    }
</style>
